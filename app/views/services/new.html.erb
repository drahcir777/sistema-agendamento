<h1><%= action_name == 'new' ? 'Novo Serviço' : 'Editar Serviço' %></h1>
  <%= form_with(model: @service, local: true) do |form| %>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>
      <div class="field">
        <%= form.label :duration_hours, "Duração (horas)" %>
        <%= form.number_field :duration_hours, value: @service.duration_hours %>
      </div>
      <div class="field">
        <%= form.label :duration_minutes, "Duração (minutos)" %>
        <%= form.number_field :duration_minutes, value: @service.duration_minutes %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
<% end %>